<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF5CB1DA" />
            <gradient android:angle="-90" android:startColor="#63C6F7" android:endColor="#FF5CB1DA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF5CB1DA" />
            <solid android:color="#63C6F7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#92dbfa" />
            <gradient android:angle="90" android:startColor="#53a2c8" android:endColor="#76c3e8" />
        </shape>
    </item>
</selector>