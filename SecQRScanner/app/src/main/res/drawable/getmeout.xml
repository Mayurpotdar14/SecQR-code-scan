<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="20dp" />
        <stroke android:width="3dp" android:color="#878787" />
        <gradient android:gradientRadius="100" android:centerX="35%" android:centerY="50%"
            android:centerColor="#5FBD20" android:startColor="#55E827" android:endColor="#14750D"
            android:type="radial" />
        <size android:width="280dp" android:height="55dp" />
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="20dp" />
        <stroke android:width="3dp" android:color="#878787" />
        <gradient android:angle="90" android:centerX="35%" android:centerY="50%"
            android:centerColor="#5FBD20" android:startColor="#55E827" android:endColor="#14750D"
            android:type="linear" />
        <size android:width="280dp"/>
    </shape>
</item>
</selector>